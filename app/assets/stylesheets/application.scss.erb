@mixin transform ($trans) {
  -ms-transform: $trans;
  -moz-transform: $trans;
  -webkit-transform: $trans;
  transform: $trans;
}

*, *:before, *:after {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}
body{
  background: url(<%= asset_path("bg.png") %>);
  font-size: 14px;
  font-family: sans-serif;
  margin: 0;
  padding: 20px 0 0;
  min-width: 800px;
}

/* Scrollbar for WebKit */
@media screen and (-webkit-min-device-pixel-ratio:0) {
  html {
    overflow-y: hidden;
  }

  body {
    bottom: 0;
    left: 0;
    overflow-y: scroll;
    position: absolute;
    right: 0;
    top: 0;
  }
}
::-webkit-scrollbar {
  height: 6px;
  width: 6px;
  z-index: 999;
}
::-webkit-scrollbar-thumb:horizontal,
::-webkit-scrollbar-thumb:vertical {
  background-color: rgba(255,255,255, 0.3);
  height: 50px;
  border-radius: 3px;
}
::-webkit-scrollbar-track:enabled {
  background-color: transparent;
}
::-webkit-scrollbar-track-piece {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3px;
}

h1{
  background:#E0E4D3;
  border: 1px solid #FFF;
  border-width: 1px 0;
  box-shadow: 0 4px 8px rgba(0, 0, 0, .4);
  color: #FFF;
  font-family: 'Anton', arial, serif;
  font-size: 67px;
  line-height: 91px;
  margin: 0 0 1em;
  padding-left: 30px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, .2);
  text-transform: uppercase;
  -webkit-transition: text-shadow 1s linear;
  &:hover{
    text-shadow: 0 -2px 4px rgba(0, 0, 0, 1) inset;
  }
}

a{
  border-bottom: 1px dashed #000;
  color: #000;
  text-decoration: none;
}

p{
  line-height:25px;
}

ul{
  margin: 0;
  padding: 0;
}

li{
  list-style-type:none;
}

#content{
  height:900px;
  position: relative;
}

.hide{
  display:none;
}

.wrap{
  background: -moz-linear-gradient(top, #fff 0%, #f6f6f6 47%, #ededed 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#fff), color-stop(47%,#f6f6f6), color-stop(100%,#ededed));
  display: inline;
  left: 30px;
  min-height: 800px;
  position: absolute;
  right:51%;
  top: 0;
  box-shadow:0 0 4px rgba(0, 0, 0, .12), 0 0 4px rgba(0, 0, 0, 0.12) inset, 0 0 4px rgba(0, 0, 0, .12) inset, 0 0 4px rgba(0, 0, 0, 0.12) inset;
}

.wrap.right{
  left:51%;
  right:30px;
}

#buttonPanel{
  margin-right: -3px;

  button {
    background: #CCC;
    border: 1px solid #777;
    border-right-color:#555;
    border-left-color:#555;
    float: right;
    padding: 3px 4px;
    position: relative;
    text-shadow:0 1px 0 #fff;
    top: -23px;
  }
}

button:hover,
button.hover {
  background: #C0C0C0;
  cursor: pointer;
}

textarea{
  font-size: 1.1em;
  outline: none;
  padding: 6px;
  resize: none;
  /* FF doesn't seem to allow absolute top/left/bottom/right settings on textareas, so these. :( */
  height: 98.5%;
  width: 98%;
}

textarea, iframe{
  background: none;
  border: none;
  position: absolute;
  top:0;
  bottom: 0;
  right:0;
  left:0;
}

iframe{
  width: 99%;
  height: 99%;
}

.wrap:focus,
textarea:focus{
  background: -moz-linear-gradient(top, #fff 0%, #e5e5e5 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#fff), color-stop(100%,#e5e5e5));
  box-shadow:3px 3px 14px rgba(0, 0, 0, .1) inset, 3px 3px 14px rgba(0, 0, 0, .1) inset;
}

.label{
  color:#FFF;
  font-family:'Just Me Again Down Here';
  font-size:32px;
  left:20%;
  position: absolute;
  text-shadow:0 1px 2px rgba(0, 0, 0, .8);
  top: -30px;
  z-index:50;
}

#markdownLabel:after{
  background: url(<%= asset_path("arrow.png") %>) no-repeat left -57px;
  display:block;
  content:"";
  height: 40px;
}

#htmlLabel:after{
  background: url(<%= asset_path("arrow.png") %>) no-repeat right 0;
  display:block;
  content:"";
  height: 40px;
}

.dialogCap{
  padding: 4px 4px 0 0;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 11;
  .close {
    background: url(<%= asset_path("close.png") %>) no-repeat 0 2px;
    border: 0;
    color: #CDCDCD;
    display: inline-block;
    padding-left: 24px;
    line-height: 24px;
    text-decoration: none;
  }
}

.dialog iframe {
  background-color: #F0F0F0;
  height: 100%;
  margin-top: 4%;
  width: 100%;
}

#copyNotice {
  color: #FFF;
  float: left;
  position: relative;
  top: -20px;
}
